<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AddMaster.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="20,40,20,20">
            
            <Label Text="First Number"/>
            <Entry x:Name="txtFirstNum" Keyboard="Numeric"/>
            
            <Label Text="Second Number"/>
            <Entry x:Name="txtSecondNum" Keyboard="Numeric"/>
            
            <Label x:Name="lblDisplay" Text="0" HorizontalOptions="Center" FontSize="Title" Margin="0,50"/>
            
            <Button Text="Add" Clicked="Add_OnClicked"/>
            <Button Text="Clear" Clicked="Clear_OnClicked"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
